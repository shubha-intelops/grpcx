
# grpcurl commands for gRPC Server

# Install grpcurl to access grpc services
    go get github.com/fullstorydev/grpcurl/...
    go install github.com/fullstorydev/grpcurl/cmd/grpcurl

# To check the services available
    grpcurl -plaintext localhost:8085 list

# To check the rpc's available inside a specific service
    grpcurl -plaintext localhost:8085 list pb.BasicService
    # grpcurl -plaintext localhost:8085 list serviceName

# To run a method from a service
    grpcurl -plaintext localhost:8085 pb.BasicService/Create
    # grpcurl -plaintext localhost:8085 serviceName/MethodName

# To describe any service
    grpcurl -plaintext -msg-template localhost:8085 describe pb.BasicService
    # grpcurl -plaintext -msg-template localhost:8085 describe serviceName

# To describe any method
    grpcurl -plaintext -msg-template localhost:8085 describe pb.BasicService.Get
    # grpcurl -plaintext -msg-template localhost:8085 describe serviceName.MethodName

# To describe any Message
    grpcurl -plaintext -msg-template localhost:8085 describe pb.MessageRequest
    # grpcurl -plaintext -msg-template localhost:8085 describe MessageName



    
# Curl commands for REST Server resource Bill
# Post
curl -X POST -H "Content-Type: application/json" \
-d '{"Ammount": 1,"Name": 1}' \
http://localhost:8084/v1/bills

# Get
curl -X GET -H "Content-Type: application/json" \
http://localhost:8084/v1/bills

# Put
curl -X PUT -H "Content-Type: application/json" \
-d '{"Id": 123,"Ammount": 1,"Name": 1}' \
http://localhost:8084/v1/bills/123

# Put
### wrong id passed in param
curl -X PUT -H "Content-Type: application/json" \
-d '{"Id": 123,"Ammount": 1,"Name": 1}' \
http://localhost:8084/v1/bills/1234

# Get  (retrieve specific Bill)
curl -X GET -H "Content-Type: application/json" \
http://localhost:8084/v1/bills/123

# Delete
curl -X DELETE -H "Content-Type: application/json" \
http://localhost:8084/v1/bills/123

    

